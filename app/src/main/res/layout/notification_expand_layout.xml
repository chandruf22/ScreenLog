<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_noti_icon_small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_noti_icon_small"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_noti_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="App Name"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/txt_noti_package"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Package"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />


                
                <TextView
                    android:id="@+id/txt_noti_activity_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    tools:text="Activity name"
                    android:textColor="@color/secondary_text"
                    android:textSize="14sp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/img_screen_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera"/>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>

